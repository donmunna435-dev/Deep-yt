# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================

# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get your user ID from @userinfobot on Telegram
ADMIN_USER_IDS=123456789,987654321

# ============================================
# GOOGLE/YOUTUBE API CONFIGURATION
# ============================================

# Get from Google Cloud Console
# 1. Go to https://console.cloud.google.com
# 2. Create new project
# 3. Enable YouTube Data API v3
# 4. Create OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here

# For production (Render/Heroku):
GOOGLE_REDIRECT_URI=https://your-app-name.onrender.com/auth/callback

# For local development:
# GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================
# SERVER CONFIGURATION
# ============================================

PORT=3000
NODE_ENV=production

# File upload limits (in bytes)
MAX_FILE_SIZE=52428800  # 50MB

# Webhook settings (for production)
WEBHOOK_DOMAIN=https://your-app-name.onrender.com
WEBHOOK_PATH=/bot-webhook
ENABLE_WEBHOOK=true

# ============================================
# SECURITY
# ============================================

# Add a secret for webhook verification
WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
